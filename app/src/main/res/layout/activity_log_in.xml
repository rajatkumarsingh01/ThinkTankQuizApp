<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screenbg"
    tools:context=".activity.LogInActivity">

    <LinearLayout
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:layout_width="0dp"
        android:gravity="center_vertical"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView

            android:layout_width="200dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/undraw_secure_login_pdn4" />

        <TextView
            style="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
            android:layout_width="match_parent"
            android:textColor="#151B54"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="LogIn Now" />

        <TextView
           style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Please LogIn to Continue" />

        <EditText
            android:id="@+id/logInemail"
            android:background="@drawable/cornerdesign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColorHint="@color/black"
            android:ems="10"
            android:hint="Enter Your Email Id"
            android:layout_marginTop="32dp"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/logINPass"
            android:background="@drawable/cornerdesign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="16sp"
            android:textColorHint="@color/black"
            android:hint="Password"
            android:layout_marginTop="18dp"
            android:inputType="numberPassword" />

        <Button
            android:layout_marginTop="32dp"
            android:id="@+id/logInBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LogIn"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:backgroundTint="#FFA500"
            android:background="@drawable/buttondesign"/>

        <TextView
            android:id="@+id/signUpText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"

            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#151B54"

            android:text="New User ? Click here to SignUp" />


    </LinearLayout>

    <ImageView

        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/wave__2_"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGetstarted"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>